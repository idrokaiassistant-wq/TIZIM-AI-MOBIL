# Database
# For SQLite (local development):
# DATABASE_URL=sqlite:///./tizim_ai.db
# For PostgreSQL (production, Railway):
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret Key (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production

# Debug Mode
DEBUG=false

# CORS Origins (comma-separated)
# Local development:
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# Production (add your Railway URL and Telegram Mini App domain):
# CORS_ORIGINS=https://your-app.railway.app,https://web.telegram.org

# Telegram Bot Settings
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CODE_EXPIRE_MINUTES=10
TELEGRAM_CODE_ATTEMPTS=3
TELEGRAM_CODE_RATE_LIMIT_MINUTES=1

